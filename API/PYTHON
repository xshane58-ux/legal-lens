# Python Example: Reading Entities
# Filterable fields: title, document_type, file_url, original_language, analysis_status, plain_summary, red_flags, risk_score, key_terms, scenarios
import requests

def make_api_request(api_path, method='GET', data=None):
    url = f'https://app.base44.com/api/{api_path}'
    headers = {
        'api_key': '0613e827247d41aeb7ada3a52b698aaf',
        'Content-Type': 'application/json'
    }
    if method.upper() == 'GET':
        response = requests.request(method, url, headers=headers, params=data)
    else:
        response = requests.request(method, url, headers=headers, json=data)
    response.raise_for_status()
    return response.json()

entities = make_api_request(f'apps/68c6d6aa1d277670929e508f/entities/LegalDocument')
print(entities)

# Python Example: Updating an Entity
# Filterable fields: title, document_type, file_url, original_language, analysis_status, plain_summary, red_flags, risk_score, key_terms, scenarios
def update_entity(entity_id, update_data):
    response = requests.put(
        f'https://app.base44.com/api/apps/68c6d6aa1d277670929e508f/entities/LegalDocument/{entity_id}',
        headers={
            'api_key': '0613e827247d41aeb7ada3a52b698aaf',
            'Content-Type': 'application/json'
        },
        json=update_data
    )
    response.raise_for_status()
    return response.json()